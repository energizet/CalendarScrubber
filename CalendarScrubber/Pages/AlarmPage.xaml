<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalendarScrubber.Pages.AlarmPage"
             BackgroundColor="{AppThemeBinding Light=#D32F2F, Dark=#B71C1C}"
             Title="Alarm">
    <NavigationPage.HasNavigationBar>False</NavigationPage.HasNavigationBar>

    <Grid RowDefinitions="*, Auto, *" Padding="30">
        <VerticalStackLayout Grid.Row="0" VerticalOptions="Center" Spacing="20">
            <Label Text="⏰" FontSize="80" HorizontalOptions="Center" />
            <Label x:Name="SubjectLabel" Text="ВСТРЕЧА"
                   TextColor="White" FontSize="32" FontAttributes="Bold"
                   HorizontalOptions="Center" HorizontalTextAlignment="Center" />
            <Label x:Name="TimeLabel" Text="Сейчас"
                   TextColor="White" FontSize="24" HorizontalOptions="Center" />
        </VerticalStackLayout>

        <Button Grid.Row="2" Text="ОСТАНОВИТЬ" Clicked="OnStopClicked"
                BackgroundColor="{AppThemeBinding Light=White, Dark=#333}"
                TextColor="{AppThemeBinding Light=#D32F2F, Dark=#FF5252}"
                FontSize="24" FontAttributes="Bold" HeightRequest="80" CornerRadius="40" />
    </Grid>
</ContentPage>